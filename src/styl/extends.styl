.unstyled-list
  list-style none
  margin-top 0
  margin-bottom 0
  padding-left 0

.flex-between
  display flex
  justify-content space-between

  @media (max-width: mobile-max)
    flex-direction column
 .btn
   font-weight: 400;
   text-align: center;
   vertical-align: middle;
   border: 1px solid transparent;
   padding: .5rem 40px;
   border-radius: .25rem;
   transition: all .15s ease-in-out;

