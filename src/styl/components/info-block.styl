.info-block
  background-color dark-blue
  color #fff
  text-align center
  padding 2em 16px

  &__item
    @extend .flex-direction

    align-items center;
    justify-content stretch;
    margin-top 2em

  &__item
    &::before
      width 50px
      height 50px
      content " "
      background-repeat no-repeat

    &--price::before
      background-image url("images/hand-icon.png")

    &--contact::before
      background-image url("images/phone-icon.png")

    &--trial-version::before
      background-image url("images/down-arrow2.png")

  &__btn
    @extend .btn

    background-color transparent
    color light-grey
    border 1px solid #fff

    &:hover
    &:focus
      color lightness(light-grey, 80)
      border-color currentColor