
.info-block
  background-color dark-blue
  color #fff
  text-align center
  padding 2em 16px

  &__item
    @extend .flex-direction

    align-items center;
    justify-content stretch;
    margin-top 2em

  &__item::before 
    content " "
    width 50px
    height 50px
    background-repeat no-repeat

  &__item--price::before
    background-image url("images/hand-icon.png")

  &__item--contact--us::before
    background-image url("images/phone-icon.png")

  &__item--trial-version::before
    background-image url("images/down-arrow2.png")

  &__btn
    @extend .btn

    background-color transparent
    color light-grey
    border 1px solid #fff

    &:hover,&:focus
      color lightness(light-grey, 80)
      border-color lightness(light-grey, 80)